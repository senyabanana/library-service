                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Песни"
                ],
                "summary": "Добавить новую песню",
                "parameters": [
                    {
                        "description": "Данные о песне",
